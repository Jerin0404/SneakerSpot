<!-- New Arrivals Section Begin -->
<section class="new-arrivals spad">
    <div class="container">
        <div class="section-title text-center">
            <h2>New Arrivals</h2>
            <p>Discover the latest trending sneakers in our collection.</p>
        </div>
        <div class="row">
            <% for (let i = 0; i < products.length; i++) { %>
            <div class="col-lg-3 col-md-4 col-sm-6 col-12">
                <div class="product-card">
                    <div class="product-img">
                        <a href="/productDetails?id=<%= products[i]._id %>">
                            <img src="/uploads/re-image/<%= products[i].productImage[0] %>"
                                 alt="<%= products[i].productName %>"
                                 class="img-fluid">
                        </a>
                        <div class="product-overlay">
                            <a href="/addToWishlist?id=<%= products[i]._id %>" class="wishlist-btn">
                                <i class="fa fa-heart"></i>
                            </a>
                        </div>
                    </div>
                    <div class="product-info text-center">
                        <h6 class="product-name"><%= products[i].productName %></h6>
                        <p class="product-price">$<%= products[i].salePrice %></p>
                        <a href="/addToCart?id=<%= products[i]._id %>" class="btn btn-primary">Add to Cart</a>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</section>
<!-- New Arrivals Section End -->

<!-- Custom CSS -->
<style>
    .new-arrivals {
        padding: 60px 0;
    }
    
    .section-title h2 {
        font-size: 28px;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
    }

    .section-title p {
        font-size: 16px;
        color: #777;
        margin-bottom: 30px;
    }

    .product-card {
        background: #fff;
        padding: 15px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
    }

    .product-img img {
        border-radius: 10px;
        max-width: 100%;
        transition: transform 0.3s ease;
    }

    .product-card:hover .product-img img {
        transform: scale(1.1);
    }

    .product-overlay {
        position: absolute;
        top: 10px;
        right: 10px;
    }

    .wishlist-btn {
        background: rgba(255, 255, 255, 0.8);
        padding: 8px;
        border-radius: 50%;
        color: #ff4757;
        font-size: 18px;
        transition: all 0.3s ease;
    }

    .wishlist-btn:hover {
        background: #ff4757;
        color: #fff;
    }

    .product-name {
        font-size: 16px;
        font-weight: 600;
        margin-top: 10px;
        color: #333;
    }

    .product-price {
        font-size: 18px;
        font-weight: bold;
        color: #ff4757;
    }

    .btn-primary {
        background: #ff4757;
        border: none;
        padding: 10px 20px;
        font-size: 14px;
        margin-top: 10px;
        border-radius: 5px;
        transition: background 0.3s ease;
    }

    .btn-primary:hover {
        background: #e84118;
    }
</style>

